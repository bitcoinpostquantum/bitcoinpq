
## <summary>policy for bpq</summary>


########################################
## <summary>
##	Transition to bpq.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`bpq_domtrans',`
	gen_require(`
		type bpq_t, bpq_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, bpq_exec_t, bpq_t)
')


########################################
## <summary>
##	Execute bpq server in the bpq domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`bpq_initrc_domtrans',`
	gen_require(`
		type bpq_initrc_exec_t;
	')

	init_labeled_script_domtrans($1, bpq_initrc_exec_t)
')


########################################
## <summary>
##	Search bpq lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`bpq_search_lib',`
	gen_require(`
		type bpq_var_lib_t;
	')

	allow $1 bpq_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

########################################
## <summary>
##	Read bpq lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`bpq_read_lib_files',`
	gen_require(`
		type bpq_var_lib_t;
	')

	files_search_var_lib($1)
	read_files_pattern($1, bpq_var_lib_t, bpq_var_lib_t)
')

########################################
## <summary>
##	Manage bpq lib files.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`bpq_manage_lib_files',`
	gen_require(`
		type bpq_var_lib_t;
	')

	files_search_var_lib($1)
	manage_files_pattern($1, bpq_var_lib_t, bpq_var_lib_t)
')

########################################
## <summary>
##	Manage bpq lib directories.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`bpq_manage_lib_dirs',`
	gen_require(`
		type bpq_var_lib_t;
	')

	files_search_var_lib($1)
	manage_dirs_pattern($1, bpq_var_lib_t, bpq_var_lib_t)
')


########################################
## <summary>
##	All of the rules required to administrate
##	a bpq environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`bpq_admin',`
	gen_require(`
		type bpq_t;
		type bpq_initrc_exec_t;
		type bpq_var_lib_t;
	')

	allow $1 bpq_t:process { ptrace signal_perms };
	ps_process_pattern($1, bpq_t)

	bpq_initrc_domtrans($1)
	domain_system_change_exemption($1)
	role_transition $2 bpq_initrc_exec_t system_r;
	allow $2 system_r;

	files_search_var_lib($1)
	admin_pattern($1, bpq_var_lib_t)

')

